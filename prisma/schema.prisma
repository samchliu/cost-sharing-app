generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id              String      @id @default(cuid())
  lineId          String?     @unique
  name            String
  picture         String
  groupCreators   Group[]
  groupUsers      GroupUser[]
  expenseCreators Expense[]   @relation("ExpenseCreator")
  expenseEditors  History[]
  expensePayers   Expense[]   @relation("ExpensePayer")
  expenseSharers  Sharer[]
}

model Group {
  id         String      @id @default(cuid())
  name       String
  picture    String
  creator    User        @relation(fields: [creatorId], references: [id])
  creatorId  String
  groupUsers GroupUser[]
  expenses   Expense[]
}

model GroupUser {
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  @@id([groupId, userId])
}

model Expense {
  id        Int       @id @default(autoincrement())
  name      String
  amount    Float
  date      DateTime
  note      String
  group     Group     @relation(fields: [groupId], references: [id])
  groupId   String
  creator   User      @relation("ExpenseCreator", fields: [creatorId], references: [id])
  creatorId String
  payer     User      @relation("ExpensePayer", fields: [payerId], references: [id])
  payerId   String
  sharers   Sharer[]
  history   History[]
}

model Sharer {
  expense   Expense @relation(fields: [expenseId], references: [id])
  expenseId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  @@id([expenseId, userId])
}

model History {
  expense   Expense  @relation(fields: [expenseId], references: [id])
  expenseId Int
  editor    User     @relation(fields: [editorId], references: [id])
  editorId  String
  editedAt  DateTime @default(now())

  @@id([expenseId, editorId])
}
