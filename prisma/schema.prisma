generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id              String           @id @default(cuid())
  name            String
  picture         String
  groupCreators   Group[]
  groupUsers      GroupUser[]
  expenseCreators Expense[]        @relation("ExpenseCreator")
  expensePayers   Expense[]        @relation("ExpensePayer")
  expenseSharers  Sharer[]
  expenseHistorys ExpenseHistory[]
}

model Group {
  id         String      @id @default(cuid())
  name       String
  picture    String
  createBy   User        @relation(fields: [createById], references: [id])
  createById String
  groupUsers GroupUser[]
  expenses   Expense[]
}

model GroupUser {
  group   Group  @relation(fields: [groupId], references: [id])
  groupId String
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  @@id([groupId, userId])
}

model Expense {
  id              Int              @id @default(autoincrement())
  name            String
  amount          Float
  date            DateTime
  note            String
  group           Group            @relation(fields: [groupId], references: [id])
  groupId         String
  createBy        User             @relation("ExpenseCreator", fields: [createById], references: [id])
  createById      String
  payer           User             @relation("ExpensePayer", fields: [payerId], references: [id])
  payerId         String
  sharers         Sharer[]
  expenseHistorys ExpenseHistory[]
}

model Sharer {
  expense   Expense @relation(fields: [expenseId], references: [id])
  expenseId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  @@id([expenseId, userId])
}

model ExpenseHistory {
  expense   Expense  @relation(fields: [expenseId], references: [id])
  expenseId Int
  editBy    User     @relation(fields: [editById], references: [id])
  editById  String
  createAt  DateTime @default(now())

  @@id([expenseId, editById])
}
